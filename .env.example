# Voynich Morphemic Decryption - Environment Variables Template
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (if using)
DATABASE_URL=sqlite:///./voynich.db

# Zenodo API Integration
ZENODO_TOKEN=your_zenodo_token_here
ZENODO_SANDBOX=true
ZENODO_BASE_URL=https://sandbox.zenodo.org/api

# GitHub API (optional)
GITHUB_TOKEN=your_github_token_here

# Data Paths
DATA_DIR=./data
OUTPUT_DIR=./output
CACHE_DIR=./.cache

# Analysis Configuration
CONFIDENCE_THRESHOLD=0.5
STATISTICAL_SIGNIFICANCE_THRESHOLD=0.05
MAX_WORKERS=4

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature Flags
ENABLE_API=true
ENABLE_CACHING=true
ENABLE_TELEMETRY=false
