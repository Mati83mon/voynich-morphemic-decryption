# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.7z binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests export-ignore
*.md export-ignore
